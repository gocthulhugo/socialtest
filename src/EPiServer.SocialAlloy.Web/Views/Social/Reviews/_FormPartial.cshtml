@using EPiServer.SocialAlloy.Web.Social.ViewModels
@model EPiServer.SocialAlloy.Web.Social.ViewModels.ReviewSubmissionViewModel
@using (Html.BeginForm("Submit", "ProductReviews", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary()

    @Html.HiddenFor(m => m.ProductId)
    @Html.HiddenFor(m => m.ProductName)
    <div class="form-group">
        <label for="title" class="control-label">Title</label>
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Great product!" })
    </div>
    <div class="form-group">
        <label for="nickname" class="control-label">Nickname</label>
        @Html.TextBoxFor(m => m.Nickname, new { @class = "form-control", placeholder = "Example: abby2012" })
    </div>
    <div class="form-group">
        <label for="location" class="control-label">Location</label>
        @Html.TextBoxFor(m => m.Location, new { @class = "form-control", placeholder = "Example: Las Vegas, NV" })
    </div>
    <div class="form-group">
        <label for="rating" class="control-label">Rating</label>
        @Html.DropDownListFor(
            m => m.Rating,
            Model.GetStars(),
            new { @class = "form-control" }
        )
    </div>
    <div class="form-group">
        <label class="control-label">How Awesome Is This Product?</label>
        @Html.DropDownListFor(
            m => m.Awesomeness.RatingValue,
            Model.Awesomeness.PossibleValues,
            new { @class = "form-control" }
        )
    </div>
    <div class="form-group">
        <label class="control-label">Overall Value?</label>
        @Html.DropDownListFor(
            m => m.OverallValue.RatingValue,
            Model.OverallValue.PossibleValues,
            new { @class = "form-control" }
        )
    </div>
    <div class="form-group">
        <label class="control-label">Hoobily Doobily Zoop?</label>
        @Html.DropDownListFor(
            m => m.RandomQuestion.RatingValue,
            Model.RandomQuestion.PossibleValues,
            new { @class = "form-control" }
        )
    </div>
    <div class="form-group">
        <label for="body" class="control-label">Review</label>
        @Html.TextAreaFor(m => m.Body, new { @class = "form-control", placeholder = "Example: I love this product. I will recommend it to all of my friends..." })
    </div>
    <button type="submit" role="button" class="btn btn-default">Submit Review</button>
}
